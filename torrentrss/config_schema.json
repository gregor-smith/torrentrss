{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"user_agent": {
			"type": "string"
		},
		"feeds": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"url": {
						"type": "string"
					},
					"interval_minutes": {
						"type": "integer",
						"minimum": 1
					},
					"on_exception_action": {
						"type": "string",
						"pattern": "^(?:stop_this_feed|stop_all_feeds|continue)$"
					},
					"on_exception_gui": {
						"type": "string",
						"pattern": "^(?:qt5_messagebox|libnotify)$"
					},
					"enabled": {
						"type": "boolean"
					}
				},
				"required": [
					"name",
					"url"
				]
			}
		},
		"directories": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"path": {
						"type": "string"
					}
				}
			}
		},
		"commands": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"arguments": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"minItems": 1
					}
				}
			}
		},
		"subscriptions": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string",
						"pattern": "^(?:(?![\\\\/:\\*\\?\"<>\\|]).)+$"
					},
					"feed": {
						"type": "string"
					},
					"pattern": {
						"type": "string"
					},
					"directory": {
						"type": "string"
					},
					"command": {
						"type": "string"
					},
					"enabled": {
						"type": "boolean"
					}
				},
				"required": [
					"name",
					"feed",
					"pattern"
				]
			}
		}
	},
	"required": [
		"feeds",
		"subscriptions"
	]
}
